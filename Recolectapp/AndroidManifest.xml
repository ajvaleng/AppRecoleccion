<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.transporte.recolectapp"
    android:screenOrientation="portrait"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.transporte.recolectapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.transporte.recolectapp.EnMovimiento"
            android:label="@string/title_activity_en_movimiento"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.transporte.ENMOVIMIENTO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.transporte.recolectapp.Paradero"
            android:label="@string/title_activity_paradero"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.transporte.PARADERO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.transporte.recolectapp.EnviandoDatos"
            android:label="@string/title_activity_enviando_datos"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.transporte.ENVIANDODATOS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.transporte.recolectapp.Configuracion"
            android:label="@string/title_activity_configuracion"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.transporte.CONFIGURACION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.transporte.recolectapp.BotonesIniciales"
            android:label="@string/title_activity_botones_iniciales" >
            <intent-filter>
                <action android:name="com.transporte.BOTONESINICIALES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.transporte.recolectapp.Bajar_datos"
            android:label="@string/title_activity_bajar_datos" >
            <intent-filter>
                <action android:name="com.transporte.BAJARDATOS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
    </application>

</manifest>