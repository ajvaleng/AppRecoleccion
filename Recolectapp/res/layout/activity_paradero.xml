<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Paradero" >

    <EditText
        android:id="@+id/tbSuben"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tbBajan"
        android:layout_alignBottom="@+id/tbBajan"
        android:layout_alignLeft="@+id/btSuben"
        android:layout_marginLeft="44dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:enabled="false"
        android:text="0" />

    <EditText
        android:id="@+id/tbBajan"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btBajan"
        android:layout_marginRight="42dp"
        android:ems="10"
        android:enabled="false"
        android:text="0"
        android:textColor="#FFFFFF" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btSalidaParadero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/graybutton"
        android:text="SalÃ­ del Paradero" />

    <Button
        android:id="@+id/btBajanCorregir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btSalidaParadero"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="29dp"
        android:background="@drawable/graybuttonmd"
        android:text="-"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btSubenCorregir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/btBajanCorregir"
        android:layout_alignBottom="@+id/btBajanCorregir"
        android:layout_toRightOf="@+id/tbSuben"
        android:background="@drawable/graybuttonmd"
        android:text="-"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btSuben"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/flechaarriba"
        android:text="Suben"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btBajan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBaseline="@+id/btSuben"
        android:layout_alignBottom="@+id/btSuben"
        android:layout_alignLeft="@+id/btBajanCorregir"
        android:background="@drawable/flechaabajo"
        android:text="Bajan"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btAtras"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btBajanCorregir"
        android:background="@drawable/graybutton"
        android:text="Atras" />

</RelativeLayout>